=render "application/complex_header"
.complex-item-page-wrap
  /- if @apartment.prev
    = link_to apartment_item_path(@apartment.prev.id), class: 'a_other_item a_prev_item se-box-shadow' do
  = link_to complex_catalog_item_path, class: 'a_other_item a_prev_item se-box-shadow' do
    .a_other_item_ico
      = embedded_svg "ic_keyboard_arrow_left_24px.svg"
    .a_other_item_label
      /b =@apartment.prev.id
      p ЖК «Сігма апартментс»

  /- if @apartment.next
  = link_to complex_catalog_item_path, class: 'a_other_item a_next_item se-box-shadow' do
    .a_other_item_label
      /b =@apartment.next.id
      p ЖК «Сігма апартментс»
    .a_other_item_ico
      = embedded_svg "ic_keyboard_arrow_right_24px.svg"

  .row
    .columns
      .se-breadcrumbs-wrap
        = render_breadcrumbs
  .row
    .columns
      .complex-item-page.se-box-shadow
        .complex-item-head
          .columns
            ul.image-carousel
              li
                .image style="background: url('#{asset_path("stub-o-3.jpg")}')no-repeat center center;"
              li
                .image style="background: url('#{asset_path("apartment2.jpg")}')no-repeat center center;"
              li
                .image style="background: url('#{asset_path("apartment5.jpg")}')no-repeat center center;"
            .complex-item-head-title
              .medium-10.columns
                h3 ЖК «Сігма апартментс»
                .rating-ico-wrap.se-ri-club
                  - 7.times
                    =embedded_svg "ic_star_24px.svg"
              .medium-2.columns
                .se-storage-link.material-component.ripple
                  a
                    =embedded_svg "ic_link_48px.svg"
              .clearfix
          .clearfix

        .complex-item-body
          .row.complex-item-more-information
            .medium-4.columns
              .columns
                .c-info-nav.se-box-shadow
                  .columns
                    ul
                      li
                        a href="#complex-general-information"
                          =embedded_svg "ic_info_black_24px.svg"
                          |Основна інформація
                      li
                        a href="#complex-specifications"
                          =embedded_svg "ic_assessment_black_24px.svg"
                          |Технічні характеристики
                      li
                        a href="#complex-about"
                          =embedded_svg "ic_border_color_black_24px.svg"
                          |Опис житлового комплексу
                      li
